<!-- res/drawable/textview_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hiệu ứng bóng -->


    <!-- Lớp nền trong suốt -->
    <item android:left="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Nền trong suốt -->
            <stroke
                android:width="1dp"
                android:color="@color/red" /> <!-- Viền màu xanh -->
            <corners android:radius="5dp" /> <!-- Bo góc (tùy chọn) -->
        </shape>
    </item>

</layer-list>
