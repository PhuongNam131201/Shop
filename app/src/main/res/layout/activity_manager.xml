<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgbackmanage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/backblue" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GIAO DIỆN QUẢN LÝ"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background" />

            <!-- Ten va chuc vu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNamManage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người dùng"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRoleManage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="14sp"
                    android:textColor="#747474" />
            </LinearLayout>

            <!-- btn profile -->
            <Button
                android:id="@+id/btnProfileManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/blue"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <!-- Metrics Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Total Fans -->

                <!-- 7-Day Growth -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#D9ECFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng sản phẩm"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtTongSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="6"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#EBD8FF"
                    android:layout_margin="4dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doanh thu"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtTongDoanhThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+29.6"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Yesterday Interaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#FFF3DB"
                    android:layout_margin="4dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng người dùng"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtTongNguoiDung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Big V Fans -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#D8FFF1"
                    android:layout_margin="4dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tin nhắn"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtTongTinNhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1722"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tác vụ quản lý"
            android:textSize="22dp"
            android:textColor="@color/blue"
            android:layout_marginVertical="20dp"
            />

        <LinearLayout
            android:id="@+id/llListmanage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/llUserManage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/manageuser" />
                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Người dùng"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCartManage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/managecart" />

                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Đơn hàng"
                    android:textStyle=""
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llProductManage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/manageproduct" />

                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Sản phẩm"
                    android:textStyle=""
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llListmanage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/llMessManage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/communications" />

                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Tin nhắn"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llListProductManager"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cubes" />
                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Hiện có"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llServiceManager"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Icon ứng dụng -->
                <ImageView
                    android:id="@+id/iconImage6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/house" />
                <!-- Tên ứng dụng -->
                <TextView
                    android:id="@+id/iconName6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Dịch vụ"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
